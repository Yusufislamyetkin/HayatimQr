@model EntityLayer.Concrete.User


@{
    ViewBag.Title = "ProfilSetting";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}











<!DOCTYPE html>
<html>
<head>
    <link href="~/Extra/forcontact.css" rel="stylesheet" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Extra/forcontact.css" rel="stylesheet" />
    <!-- Font Awesome -->
   
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
  
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">


    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap-extended.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/fonts/simple-line-icons/style.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/colors.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/72d82a5a39.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Extra/userviewcs.css" rel="stylesheet" />
    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/Web2/assets/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/Web2/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/Web2/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/Web2/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/Web2/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <style>
        .avatar {
            vertical-align: middle;
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
            height: 50%;
        }
    </style>

</head>


<body>


    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->

                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
                     id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>

                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <!-- Search -->
                        <strong>@Model.UserName @Model.UserSurname</strong>
                        <!-- /Search -->

                        <ul class="navbar-nav flex-row align-items-center ms-auto">
                            <!-- Place this tag where you want the button to render. -->
                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">


                                @if (Model.UserImage == null)
                                {
                                    <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                        <div class="avatar avatar-online">
                                            <img src="~/Extra/images/fre2.png" alt="Avatar" class="avatar" />


                                        </div>
                                    </a>

                                }
                                else
                                {
                                    <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                        <div class="avatar avatar-online">
                                            <img src="@Model.UserImage" alt="Avatar" class="avatar" />

                                        </div>
                                    </a>
                                }




                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                </nav>

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">

                        <div class="row">
                            <div class="col-md-12">

                                <div class="card mb-4">

                                    <!-- Account -->
                                    <main id="main">

                                        <!-- ======= About Section ======= -->
                                        <!-- ======= Clients Section ======= -->
                                        <!-- ======= Features Section ======= -->




                                        <div class="contact-clean">

                                            @using (Html.BeginForm("ProfilSetting", "UserHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                            {
                                                <div class="form-group">






                                                    <br />
                                                    <div style="margin-left:20px">
                                                        @Html.Label("Eski Şifre")
                                                        <div class="form-group"><input class="form-control" type="text" name="UserPasswordOld" placeholder="*************"></div>

                                                    </div>

                                                    <br />
                                                    <div style="margin-left:20px">
                                                        @Html.Label("Yeni Şifre")
                                                        @*@Html.TextBoxFor(x => x.activityPrice, new { @class = "form-control" })*@
                                                        <div class="form-group"><input class="form-control" type="text" name="UserPassword" placeholder="*************"></div>

                                                    </div>

                                                    <br />
                                                    <div style="margin-left:20px">
                                                        <div class="mb-3">

                                                            @Html.Label("Profil Fotoğrafı")
                                                            <input type="file"
                                                                   class="form-control"
                                                                   id="UserImage"
                                                                   name="UserImage"
                                                                   placeholder="Profil Fotoğrafı Yükleyin"
                                                                   autofocus />
                                                        </div>
                                                    </div>







                                                </div>
                                                <br />
                                                <br />
                                                <div style="margin-left:20px">
                                                    <button class="btn btn-info text-center  form-control " style="color:white"> Güncelle </button>
                                                </div>

                                            }


                                            <br />

                                        </div>






                                    </main>
                                    <!--




                                    <!-- /Account -->
                                </div>
                                @if (TempData["AlertMessage1"] != null)
                                {<div class="alert alert-info ">
                                        <strong class="text-center" style="color:white"> Başarılı ! @TempData["AlertMessage1"] </strong>
                                    </div>

                                }
                                @if (TempData["AlertMessage2"] != null)
                                {<div class="alert alert-info ">
                                        <strong class="text-center" style="color:white"> Başarısız ! @TempData["AlertMessage2"] </strong>
                                    </div>

                                }
                            </div>

                        </div>
                    </div>


                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->

    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="~/Web2/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/Web2/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/Web2/assets/vendor/js/bootstrap.js"></script>
    <script src="~/Web2/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="~/Web2/assets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <!-- Main JS -->
    <script src="~/Web2/assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="~/Web2/assets/js/pages-account-settings-account.js"></script>

    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>


</body>


</html>






