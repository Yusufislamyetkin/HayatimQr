    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
    <script src="../assets/js/config.js"></script>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->

                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
                     id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>

                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <!-- Search -->
                        <strong>@Model.User.UserName @Model.User.UserSurname</strong>
                        <!-- /Search -->

                        <ul class="navbar-nav flex-row align-items-center ms-auto">
                            <!-- Place this tag where you want the button to render. -->
                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">


                                @if (Model.User.UserImage == null)
                                {
                                    <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                        <div class="avatar avatar-online">
                                            <img src="~/Extra/images/fre2.png" alt="Avatar" class="avatar" />


                                        </div>
                                    </a>

                                }
                                else
                                {
                                    <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                        <div class="avatar avatar-online">
                                            <img src="@Model.User.UserImage" alt="Avatar" class="avatar" />

                                        </div>
                                    </a>
                                }




                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                </nav>

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->

                    <div class="container-xxl flex-grow-1 container-p-y">

                        <div class="row">
                            <div class="col-md-12">

                                <div class="card mb-4">

                                    <!-- Account -->

                                    @using (Html.BeginForm("QRUpdate", "UserHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="card-body">
                                            <div class="d-flex align-items-start align-items-sm-center gap-4">
                                                <img src="~/Extra/images/defaultDC.jpg"
                                                     alt="user-avatar"
                                                     class="d-block rounded"
                                                     height="180"
                                                     width="180"
                                                     id="uploadedAvatar" />
                                                <div class="button-wrapper">
                                                    <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                                        <span class="d-none d-sm-block">Fotoğraf Yükle</span>
                                                        <i class="bx bx-upload d-block d-sm-none"></i>
                                                        <input type="file"
                                                               id="upload"
                                                               name="PetImage"
                                                               class="account-file-input"
                                                               hidden
                                                               accept="image/png, image/jpeg" />
                                                    </label>
                                                  

                                                    <p class="text-muted mb-0">Yanlızca Jpg ve Png formatında yükleme yapınız. </p>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-0" />
                                        <div class="card-body">

                                            <div class="row">
                                                <div class="mb-3 col-md-6">
                                                    <label for="firstName" class="form-label">Evcil Hayvan Sahibi Ad</label>
                                                    <input class="form-control"
                                                           type="text"
                                                           id="firstName"
                                                           name="PetOwnerName"
                                                           value="@Model.PetOwnerName"
                                                           autofocus />
                                                </div>

                                                <div class="mb-3 col-md-6">
                                                    <label for="email" class="form-label">Evcil Hayvan Sahibi Soyad</label>
                                                    <input class="form-control"
                                                           type="text"
                                                           id="email"
                                                           name="PetOwnerSurName"
                                                           value="@Model.PetOwnerSurName"
                                                           placeholder="" />
                                                </div>

                                                <div class="mb-3 col-md-6">
                                                    <label class="form-label" for="phoneNumber">Evcil Hayvan Sahibi Telefon</label>
                                                    <div class="input-group input-group-merge">
                                                        <span class="input-group-text">TR (+90)</span>
                                                        <input type="text"
                                                               id="phoneNumber"
                                                               name="PetOwnerPhone"
                                                               class="form-control"
                                                               value="@Model.PetOwnerPhone"
                                                               placeholder=""
                                                               maxlength="10" />
                                                    </div>
                                                </div>
                                                <div class="mb-3 col-md-6">
                                                    <label for="organization" class="form-label">Evcil Hayvan Adı</label>
                                                    <input type="text"
                                                           class="form-control"
                                                           id="organization"
                                                           value="@Model.PetName"
                                                           name="PetName"
                                                           placeholder="Pati" />
                                                </div>

                                                <div class="mb-3 col-md-6">
                                                    <label for="state" class="form-label">Evcil Hayvan Yaşı</label>
                                                    <input class="form-control" type="text" id="state" name="PetAge" value="@Model.PetAge" placeholder="Yaş Bilgisi" />
                                                </div>

                                                <div class="mb-3 col-md-6">
                                                    <label for="zipCode" class="form-label">Bulan Kişinin Bilmesi Gerekenler</label>
                                                    <input type="text"
                                                           class="form-control"
                                                           value="@Model.PetWarning"
                                                           id="zipCode"
                                                           name="PetWarning"
                                                           placeholder="Süte alerjisi var vs.." />
                                                </div>

                                                <div class="mb-3 col-md-6">
                                                    <label for="zipCode" class="form-label">Bulan Kişinin Dikkat Etmesi Gerekenler</label>
                                                    <input type="text"
                                                           class="form-control"
                                                           id="zipCode"
                                                            value="@Model.PetWarning2"
                                                           name="PetWarning2"
                                                           placeholder="Korktuğunda saldırganlaşabilir vs.." />
                                                </div>

                                                <div class="mb-3 col-md-6">
                                                    <label for="zipCode" class="form-label">Bulan Kişiye Özel Not </label>
                                                    <input type="text"
                                                           class="form-control"
                                                           id="zipCode"
                                                            value="@Model.SpecialNote"
                                                           name="SpecialNote"
                                                           placeholder="İyi ki buldunuz, en kısa sürede umarım kucağıma alabilirim vs.." />
                                                </div>


                                                <div class="mb-3 col-md-6">


                                                </div>
                                                <div class="mb-3 col-md-6">

                                                </div>


                                            </div>
                                            <div class="mt-2">
                                                <button type="submit" class="btn btn-primary me-2">Değişiklikleri Kaydet</button>
                                                <button type="reset" class="btn btn-outline-secondary">Vazgeç</button>
                                            </div>



                                        </div>
                                    }
                                    <!-- /Account -->
                                </div>
                                @if (TempData["AlertMessage1"] != null)
                                {<div class="alert alert-info ">
                                        <strong class="text-center" style="color: blueviolet"> Başarılı ! @TempData["AlertMessage1"] </strong>
                                    </div>

                                }
                                @if (TempData["AlertMessage2"] != null)
                                {<div class="alert alert-info ">
                                        <strong class="text-center" style="color:blueviolet"> Başarısız ! @TempData["AlertMessage2"] </strong>
                                    </div>

                                }
                            </div>

                        </div>
                    </div>


                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
     
        <!-- Overlay -->

    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="~/Web2/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/Web2/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/Web2/assets/vendor/js/bootstrap.js"></script>
    <script src="~/Web2/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="~/Web2/assets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <!-- Main JS -->
    <script src="~/Web2/assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="~/Web2/assets/js/pages-account-settings-account.js"></script>

    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
